<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#EADADA"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:background="#C4C4C4"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="117dp" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:background="#C4C4C4"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="278dp" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:background="#C4C4C4"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="Brithday"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="434dp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:background="#C4C4C4"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="Phone"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="198dp" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:background="#C4C4C4"

        android:drawableEnd="@drawable/eye_1"
        android:drawableRight="@drawable/eye_1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:text="REGISTER"
        android:textColor="#050505"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="368dp"
        android:layout_height="59dp"
        android:backgroundTint="#FF5722"
        android:text="REGISTER"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="550dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:text="When you agree to terms and conditions"
        android:textColor="#0B0A0A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="620dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="73dp"
        android:layout_height="42dp"
        android:text="Male"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="508dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="501dp" />

</androidx.constraintlayout.widget.ConstraintLayout>